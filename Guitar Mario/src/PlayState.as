		override public function update():void
		{
			FlxU.collide(level, player);
			FlxU.overlap(player, enemys, overlapPlayerEnemy);
			
			spawnTimer -= FlxG.elapsed;
 
            if(spawnTimer < 0)
            {
                spawnEnemy();
                resetSpawnTimer();
            }
			
			super.update();
		}
		
		private function spawnEnemy():void
        {
			var random: Number = (int)(Math.random()*3)+1;
            var x: Number = FlxG.width;
			var y: Number;
            
			if (random == 1) {
				y = 35;
				enemys.add(new Enemy(x, y));
			}
			
			if (random == 2) {
				y = 107;
				enemys.add(new Enemy(x, y));
			}
			
			if (random == 3) {
				y = 179;
				enemys.add(new Enemy(x, y));
			}		
        }
 
        private function resetSpawnTimer():void
        {
            spawnTimer = spawnInterval;
            spawnInterval *= 0.99;
            if(spawnInterval < 1)
            {
                spawnInterval = 1;
            }
        }
		
		
		private function overlapPlayerEnemy(player: Player, enemys: Enemy):void
		{
			if (!player.onFloor) {
				FlxG.play(Stomp,1,false)
				enemys.kill();
				FlxG.score += 1;
				scoreText.text = FlxG.score.toString();
			}
			
			if (player.onFloor) {
				FlxG.play(Hit,1,false)
				enemys.kill();
				FlxG.score -= 1;
				scoreText.text = FlxG.score.toString();
			}
		}
