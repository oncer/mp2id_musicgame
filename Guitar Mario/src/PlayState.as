		private function overlapRunnerEnemy(runner: Runner, enemy: Enemy):void
		{
			if (!runner.onFloor) {
				//FlxG.play(Stomp,1,false)
				enemy.playSound()
				enemy.kill();
				FlxG.score += 1;
				scoreText.text = FlxG.score.toString();
			}
			
			if (runner.onFloor) {
				FlxG.play(Hit,1,false)
				enemy.kill();
				FlxG.score -= 1;
				scoreText.text = FlxG.score.toString();
			}
		}
